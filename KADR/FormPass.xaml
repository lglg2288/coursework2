<Window x:Class="KADR.FormPass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KADR"
        mc:Ignorable="d"
        Title="FormPass" Height="250" Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Grid>
        <Border Background="#272727" CornerRadius="10" Padding="10" Margin="20,20,20,20">
            <Border.Effect>
                <DropShadowEffect Color="#00BFFF" BlurRadius="20" ShadowDepth="0"/>
            </Border.Effect>

            <Grid Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="#151515"
                        Grid.Row="0"
                        Height="40"
                        VerticalAlignment="Top"
                        Margin="-10, -10, -10, -10"
                        CornerRadius="10, 10, 0, 0"
                        MouseLeftButtonDown="Border_MouseLeftButtonDown"
                        >
                    <TextBlock Text="Авторизация"
                           Foreground="#00BFFF"
                           VerticalAlignment="Center"
                           FontSize="20"
                           Margin="18, 0, 0, -2"/>
                </Border>

                <StackPanel Grid.Row="1" Margin="10, 5, 0, 0">
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,18,0,0" Height="30">
                        <TextBlock
                            Margin="20, 0, 0, 0"                       
                            FontSize="18"
                            Grid.Row="1"
                            Text="Логин"
                            HorizontalAlignment="Center"
                            Foreground="White"/>
                        <TextBox
                            x:Name="TextBoxLogin"
                            FontSize="15"
                            Background="#202020"
                            Margin="17.7, 0, 0, 0"
                            Width="200"
                            HorizontalAlignment="Center">
                            <TextBox.Effect>
                                <DropShadowEffect></DropShadowEffect>
                            </TextBox.Effect>
                        </TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,18,0,0" Height="30">
                        <TextBlock
                            Margin="18,0,0,0"                       
                            FontSize="18"
                            Grid.Row="1"
                            Text="Пароль"
                            HorizontalAlignment="Center"
                            Foreground="White"/>
                        <PasswordBox
                            x:Name="PasswordBoxPass"
                            FontSize="15"
                            Background="#202020"
                            Margin="8,0,0,0"
                            Width="200"
                            HorizontalAlignment="Center">
                            <PasswordBox.Effect>
                                <DropShadowEffect></DropShadowEffect>
                            </PasswordBox.Effect>
                        </PasswordBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,18,0,0" Height="30">
                        <Button
                            Background="#202020"
                            Margin="18,0,0,0"                       
                            FontSize="12"
                            Grid.Row="1"
                            Content="ОК"
                            Width="90"
                            HorizontalAlignment="Center"
                            Foreground="White" Click="Button_Click_1"/>
                        <Button
                            Background="#202020"
                            Margin="90,0,0,0"
                            FontSize="12"
                            Content="ВЫХОД"
                            Width="90"
                            HorizontalAlignment="Center" Click="Button_Click"/>
                    </StackPanel>
                </StackPanel>

                <Canvas Width="360" Height="210"
                        Grid.Row="0" Grid.RowSpan="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <Path x:Name="CrossPath"
                          Visibility="Hidden"
                          Stroke="Red"
                          StrokeThickness="8"
                          StrokeEndLineCap="Round"
                          Canvas.Left="0" Canvas.Top="0">
                          <!--Data="M 10 10 L 30 30 M 30 10 L 10 30
                          M 30 30 L 20 40
                          M 10 30 L 0 20
                          M 10 10 L 20 0
                          M 30 10 L 40 20"-->
                        <Path.Data>
                            <PathGeometry>
                                <PathFigure x:Name="lineFigure1" StartPoint="180,105">
                                    <LineSegment x:Name="xt1" Point="180,105"/>
                                </PathFigure>
                                <PathFigure x:Name="lineFigure2" StartPoint="180,105">
                                    <LineSegment x:Name="xt2" Point="180,105"/>
                                </PathFigure>
                                <PathFigure x:Name="lineFigure3" StartPoint="180,105">
                                    <LineSegment x:Name="xt3" Point="180,105"/>
                                </PathFigure>
                                <PathFigure x:Name="lineFigure4" StartPoint="180,105">
                                    <LineSegment x:Name="xt4" Point="180,105"/>
                                </PathFigure>

                                <PathFigure x:Name="lineFigure5" StartPoint="180,105">
                                    <LineSegment x:Name="lop1" Point="180,105"/>
                                </PathFigure>
                                <PathFigure x:Name="lineFigure6" StartPoint="180,105">
                                    <LineSegment x:Name="lop2" Point="180,105"/>
                                </PathFigure>
                                <PathFigure x:Name="lineFigure7" StartPoint="180,105">
                                    <LineSegment x:Name="lop3" Point="180,105"/>
                                </PathFigure>
                                <PathFigure x:Name="lineFigure8" StartPoint="180,105">
                                    <LineSegment x:Name="lop4" Point="180,105"/>
                                </PathFigure>
                            </PathGeometry>
                        </Path.Data>
                        <Path.RenderTransform>
                            <TransformGroup>
                                <RotateTransform x:Name="CrossRotate" CenterX="180" CenterY="20"/>
                                <ScaleTransform x:Name="CrossScale" CenterX="105" CenterY="20"/>
                            </TransformGroup>
                        </Path.RenderTransform>
                    </Path>
                </Canvas>
            </Grid>
        </Border>
    </Grid>
</Window>
