<Window x:Class="KADR.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KADR"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="WindowBorder" Background="#151515" CornerRadius="10" Padding="10" Margin="20,20,20,20" Grid.ColumnSpan="2">
            <Border.Effect>
                <DropShadowEffect Color="#00BFFF" BlurRadius="20" ShadowDepth="0"/>
            </Border.Effect>

            <Border SizeChanged="Border_SizeChanged" CornerRadius="10" Margin="-10,-10,-10,-10">
                <Border.Clip>
                    <RectangleGeometry x:Name="RectangleBoarder" RadiusX="10" RadiusY="10">
                        <RectangleGeometry.Rect>
                            <Rect Width="1160" Height="660" X="0" Y="0"/>
                        </RectangleGeometry.Rect>
                    </RectangleGeometry>
                </Border.Clip>

                <Grid x:Name="InternalGrid" Margin="0,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*">
                        </RowDefinition>
                    </Grid.RowDefinitions>
                    <Border
                        x:Name="TitleBorder"
                        Margin="0"
                        Grid.Row="0"
                        Background="#151515"
                        CornerRadius="10,10,0,0"
                        MouseLeftButtonDown="Border_MouseLeftButtonDown">
                        <Grid>
                            <TextBlock Text="Отдел кадров" 
                                   Foreground="#00BFFF"
                                   FontSize="20"
                                   Margin="18, 10, 0, 0"/>
                            <StackPanel Margin="0,0,5,0"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                                <Button x:Name="btnMinimized"
                                    BorderThickness="0"
                                    Width="40" Height="40" 
                                    Background="Transparent" Click="btnMinimized_Click">
                                    <Ellipse Fill="#2ef100"   
                                         Stroke="DarkBlue"
                                         StrokeThickness="0"
                                         Width="20"
                                         Height="20"/>
                                </Button>
                                <Button x:Name="btnExpand"
                                    BorderThickness="0"
                                    Width="40" Height="40" 
                                    Background="Transparent" Click="btnExpand_Click">
                                    <Ellipse Fill="Yellow"
                                     Stroke="DarkBlue"
                                     StrokeThickness="0"
                                     Width="20"
                                     Height="20"/>
                                </Button>
                                <Button x:Name="btnClose"
                                    BorderThickness="0"
                                    Width="40" Height="40" 
                                    Background="Transparent"
                                    Click="btnClose_Click">
                                    <Ellipse Fill="Red"
                                         Stroke="DarkBlue"
                                         StrokeThickness="0"
                                         Width="20"
                                         Height="20"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <Viewbox Grid.Row="1" Margin="0">
                        <Grid Background="#272727"
                              Width="1179"
                              Height="630"
                              >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>


                            <ListBox 
                                    x:Name="MenuList"
                                    Grid.Column="0"
                                    Background="#202020"
                                    Foreground="White"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Left"
                                    Focusable="False"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                    SelectionChanged="MenuList_SelectionChanged_1"
                                    >
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="FontSize" Value="23"/>
                                        <Setter Property="Height" Value="50"/>
                                        <Setter Property="Width" Value="200"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="Bd" Background="{TemplateBinding Background}">
                                                        <ContentPresenter Margin="5"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Bd" Property="Background" Value="#171717"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Bd" Property="Background" Value="#171717"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBoxItem Content="📁 Справочники" TabIndex="0"/>
                                <ListBoxItem Content="⚙️ Админист-е" TabIndex="1"/>
                                <ListBoxItem Content="📝 Приказы" TabIndex="1"/>
                                <ListBoxItem Content="📊 Отчет" TabIndex="2"/>
                            </ListBox>


                            <DataGrid x:Name="MainDataGrid"
                                      Grid.Column="1"
                                      AutoGenerateColumns="True"
                                      CanUserAddRows="True"
                                      CanUserDeleteRows="True"
                                      Margin="0"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="All"
                                      BorderThickness="1"
                                      Visibility="Collapsed"
                                      MouseRightButtonUp="MainDataGrid_MouseRightButtonUp">
                            </DataGrid>


                            <Grid x:Name="AdminPanel" Grid.Column="1" Visibility="Hidden">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal" Height="30" Margin="0,20,0,0">
                                        <TextBlock Margin="53, 0, 0, 0" FontSize="18" Grid.Row="1" Text="ID" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBox x:Name="AdminPaneltxtBoxID" FontSize="15" Background="#202020" Margin="17.7, 0, 0, 0" Width="200" HorizontalAlignment="Center">
                                            <TextBox.Effect>
                                                <DropShadowEffect></DropShadowEffect>
                                            </TextBox.Effect>
                                        </TextBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Height="30" Margin="15,20,0,0">
                                        <TextBlock Margin="20, 0, 0, 0" FontSize="18" Grid.Row="1" Text="Имя" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBox x:Name="AdminPaneltxtBoxName" FontSize="15" Background="#202020" Margin="17.7, 0, 0, 0" Width="200" HorizontalAlignment="Center">
                                            <TextBox.Effect>
                                                <DropShadowEffect></DropShadowEffect>
                                            </TextBox.Effect>
                                        </TextBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Height="30" Margin="0,20,0,0">
                                        <TextBlock Margin="20, 0, 0, 0" FontSize="18" Grid.Row="1" Text="Логин" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBox x:Name="AdminPaneltxtBoxLogin" FontSize="15" Background="#202020" Margin="17.7, 0, 0, 0" Width="200" HorizontalAlignment="Center">
                                            <TextBox.Effect>
                                                <DropShadowEffect></DropShadowEffect>
                                            </TextBox.Effect>
                                        </TextBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Height="30" Margin="0,20,0,0">
                                        <TextBlock Margin="18,0,0,0" FontSize="18" Grid.Row="1" Text="Пароль" HorizontalAlignment="Center" Foreground="White"/>
                                        <PasswordBox x:Name="AdminPanelPassword" FontSize="15" Background="#202020" Margin="8,0,0,0" Width="200" HorizontalAlignment="Center">
                                            <PasswordBox.Effect>
                                                <DropShadowEffect></DropShadowEffect>
                                            </PasswordBox.Effect>
                                        </PasswordBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Height="30" Margin="0,20,0,0">
                                        <TextBlock Margin="18,0,0,0" FontSize="18" Grid.Row="1" Text="Права администратора" HorizontalAlignment="Center" Foreground="White"/>
                                        <CheckBox x:Name="CheckboxIsAdmin" Margin="10,0,0,0"></CheckBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Height="30" Margin="0,20,0,0">
                                        <RadioButton GroupName="IdOrLogin" Content="по ID" x:Name="AdminPanelRadioId" Margin="10,0,0,0"/>
                                        <RadioButton GroupName="IdOrLogin" Content="по логину" x:Name="AdminPanelRadioLogin" Margin="10,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                        <Button x:Name="AdminPanelAddUser" Margin="18,0,0,0" FontSize="18" Grid.Row="1" Content="Добавить пользователя" HorizontalAlignment="Center" Foreground="White" Click="AdminPanelAddUser_Click"/>
                                        <Button x:Name="AdminPanelUpdateUser" Margin="18,0,0,0" FontSize="18" Grid.Row="1" Content="Обновить данные пользователя" HorizontalAlignment="Center" Foreground="White" Click="AdminPanelUpdateUser_Click"/>
                                        <Button x:Name="AdminPanelDeleteUser" Margin="18,0,0,0" FontSize="18" Grid.Row="1" Content="Удалить ползователя" HorizontalAlignment="Center" Foreground="White" Click="AdminPanelDeleteUser_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>




                            <DataGrid x:Name="JornalKardDataGrid" Grid.Column="1" AutoGenerateColumns="False"
                                      IsReadOnly="False" CanUserAddRows="True" CanUserDeleteRows="True"
                                      Visibility="Hidden">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" IsReadOnly="True" />
                                    <DataGridTextColumn Header="NumDoc" Binding="{Binding NumDoc}" />
                                    <DataGridTextColumn Header="DateDoc" Binding="{Binding DateDoc}" />
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                                    <DataGridTextColumn Header="FullName" Binding="{Binding FullName}" />

                                    <!-- ComboBox для PostId -->
                                    <DataGridTemplateColumn Header="Post">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding PostList}" 
                              DisplayMemberPath="FullName" 
                              SelectedValuePath="ID" 
                              SelectedValue="{Binding PostId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- ComboBox для PeoplesId -->
                                    <DataGridTemplateColumn Header="People">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding PeoplesList}" 
                                                          DisplayMemberPath="FullName" 
                                                          SelectedValuePath="ID" 
                                                          SelectedValue="{Binding PeoplesId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- ComboBox для ClassId -->
                                    <DataGridTemplateColumn Header="Class">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding ClassList}" 
                                                          DisplayMemberPath="FullName"
                                                          SelectedValuePath="ID"
                                                          SelectedValue="{Binding ClassId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- ComboBox для TypeDoscId -->
                                    <DataGridTemplateColumn Header="TypeDoc">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding TypeDoscList}" 
                                                          DisplayMemberPath="FullName"
                                                          SelectedValuePath="ID"
                                                          SelectedValue="{Binding TypeDoscId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Button x:Name="btnSaveJornalKardDataGrid" Click="btnSaveJornalKardDataGrid_Click" Grid.Column="0" Width="70" FontSize="15" Content="SAVE" Margin="65,300,65,295" Visibility="Hidden"/>

                            <Grid x:Name="ReportToExel" Grid.Column="1" Visibility="Hidden">
                                <Button x:Name="btnExport" Content="Export" Width="70" Height="20" Click="btnExport_Click"/>
                                <TextBox x:Name="txtBoxNumDoc" Width="70" Height="20" Margin="454,272,455,332"></TextBox>
                            </Grid>

                        </Grid>
                    </Viewbox>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>