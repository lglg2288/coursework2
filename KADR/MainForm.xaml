<Window x:Class="KADR.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KADR"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        >
    <Grid>
        <Border Background="#272727" CornerRadius="10" Padding="10" Margin="20,20,20,20">
            <Border.Effect>
                <DropShadowEffect Color="#00BFFF" BlurRadius="20" ShadowDepth="0"/>
            </Border.Effect>

            <Grid Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border
                    Margin="-10,-10,-10, 0"
                    Grid.Row="0"
                    Background="#202020"
                    CornerRadius="10,10,0,0"
                    MouseLeftButtonDown="Border_MouseLeftButtonDown">
                    <Grid>
                        <TextBlock Text="Отдел кадров" 
                                   Foreground="#00BFFF"
                                   FontSize="20"
                                   Margin="18, 10, 0, 0"/>
                        <StackPanel Margin="0,0,5,0"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button x:Name="btnCose"
                                    BorderThickness="0"
                                    Width="40" Height="40" 
                                    Background="Transparent">
                                <Ellipse Fill="Yellow"
                                     Stroke="DarkBlue"
                                     StrokeThickness="0"
                                     Width="20"
                                     Height="20">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform X="0" Y="0"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Button>
                            <Button x:Name="btnClose"
                                    BorderThickness="0"
                                    Width="40" Height="40" 
                                    Background="Transparent"
                                    Click="btnClose_Click">
                                <Ellipse Fill="Red"
                                                 Stroke="DarkBlue"
                                                 StrokeThickness="0"
                                                 Width="20"
                                                 Height="20">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform X="0" Y="0"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Button>
                        </StackPanel>                        
                    </Grid>
                </Border>
                <Viewbox Grid.Row="1"
                         Width="1160"
                         Height="620"
                         Margin="-10,0,-10,0">
                    
                </Viewbox>
            </Grid>
        </Border>
    </Grid>
</Window>
